<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="horizontal"


    tools:context=".MainActivity">


    <Button
        android:id="@+id/b1"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:background="@drawable/button"
        android:text="1"
        android:textSize="20dp"
        android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <Button
        android:id="@+id/b2"
        android:layout_width="85dp"
        android:layout_height="56dp"
        android:text="2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="85dp"
        android:layout_height="56dp"
        android:text="3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="85dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:text="4"
        android:textSize="20dp"
        android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b5"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        android:text="5"
        android:textSize="20dp"
        android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintTop_toBottomOf="@+id/b2"
        app:layout_constraintVertical_bias="0.203"
        android:background="@drawable/button" />

    <Button
        android:id="@+id/b6"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:text="6"
        android:textSize="20dp"
         android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b3"
        app:layout_constraintVertical_bias="0.199"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b7"
        android:layout_width="85dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:text="7"
        android:textSize="20dp"
        android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4"
        app:layout_constraintVertical_bias="0.327"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b8"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:text="8"
        android:textSize="20dp"
        android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toEndOf="@+id/b7"
        app:layout_constraintTop_toBottomOf="@+id/b5"
        app:layout_constraintVertical_bias="0.327"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b9"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:text="9"
        android:textSize="20dp"
        android:onClick="value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toEndOf="@+id/b8"
        app:layout_constraintTop_toBottomOf="@+id/b6"
        app:layout_constraintVertical_bias="0.327"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/b10"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b8"
        app:layout_constraintVertical_bias="0.746"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/add"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:text="+"
        android:textSize="28dp"
        android:onClick="Operator"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        android:background="@drawable/button1"
        />

    <Button
        android:id="@+id/sub"
        android:layout_width="87dp"
        android:layout_height="53dp"
        android:background="@drawable/button1"
        android:onClick="Operator"
        android:text="-"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:layout_marginEnd="56dp"
        android:text="*"
        android:textSize="28dp"
        android:onClick="Operator"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toEndOf="@+id/sub"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        android:background="@drawable/button1"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:text="Clear"
        android:textSize="20dp"
        android:onClick="Clear"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789"
        android:background="@drawable/button2"
       />

    <Button
        android:id="@+id/div"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:text="/"
        android:textSize="25dp"
        android:textStyle="bold"
        android:onClick="Operator"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/multiply"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        android:background="@drawable/button1"/>

    <Button
        android:id="@+id/ans"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:text="ANS"
        android:textSize="20dp"
        android:onClick="Answer"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793"
        android:background="@drawable/button2"/>

    <EditText
        android:id="@+id/e1"
        android:layout_width="383dp"
        android:layout_height="88dp"
        android:background="@drawable/backgroundcolor"
        android:ems="10"
        android:gravity="center"
        android:text="0"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
